doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title App
    base(href='/')

    link(rel='icon', type='image/png' href='/favicon.png')

    //Dashboard Fonts
    link(href="http://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700", rel="stylesheet", type='text/css', media="all")
    link(href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,600,700", rel="stylesheet", type='text/css', media="all")

    //Dashboard Styles
    link(href='./css/vendors.bundle.css', rel='stylesheet', type='text/css')
    //link(href='./css/style.bundle.css', rel='stylesheet', type='text/css')

  body.m-page--loading-non-block.m-page--fluid.m--skin-.m-content--skin-light2.m-header--fixed.m-header--fixed-mobile.m-aside-left--enabled.m-aside-left--skin-dark.m-aside-left--offcanvas.m-footer--push.m-aside--offcanvas-default
    // Preloader
    .spinning-preloader-container
      .spinning-preloader-elements
      .preloader-wrapper.active
      .showbox
        .loader
          svg.circular(viewbox='25 25 50 50')
            circle.path(cx='50', cy='50', r='15', fill='none', stroke-width='2', stroke-miterlimit='10')
    // App
    app.fade-element-in(style='height:100%')

